{
  "expo": {
    "name": "Memory Care Phone",
    "slug": "memory-care-phone",
    "version": "1.0.4",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "permissions": [
      "android.permission.RECORD_AUDIO",
      "android.permission.MODIFY_AUDIO_SETTINGS",
      "android.permission.INTERNET",
      "android.permission.ACCESS_NETWORK_STATE",
      "android.permission.CALL_PHONE",
      "android.permission.READ_CONTACTS",
      "android.permission.WRITE_CONTACTS",
      "android.permission.SEND_SMS",
      "android.permission.READ_SMS",
      "android.permission.RECEIVE_SMS",
      "android.permission.WAKE_LOCK",
      "android.permission.VIBRATE"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.mokeyline.memorycarephone",
      "icon": "./assets/icon.png",
      "infoPlist": {
        "NSContactsUsageDescription": "This app accesses your contacts to display them for easy calling and messaging. All contact data remains on your device and is never uploaded to any server.",
        "NSMicrophoneUsageDescription": "This app needs microphone access to make phone calls.",
        "NSSMSUsageDescription": "This app needs SMS access to send text messages to your contacts.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "privacyPolicy": "https://sites.google.com/view/assistive-memory-phone-app/privacy-policy",
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.mokeyline.memorycarephone",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.CALL_PHONE",
        "android.permission.READ_CONTACTS",
        "android.permission.WRITE_CONTACTS",
        "android.permission.SEND_SMS",
        "android.permission.READ_SMS",
        "android.permission.RECEIVE_SMS",
        "android.permission.WAKE_LOCK",
        "android.permission.VIBRATE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-contacts",
        {
          "contactsPermission": "Allow Memory Care Phone to access your contacts to display them for easy calling and messaging. All contact data remains on your device and is never uploaded to any server."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "7bae3789-e4a2-43d6-8462-38c21e55ca0e"
      }
    }
  }
}
